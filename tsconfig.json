{
    "compilerOptions": {
        "target": "ESNext",
        "module": "CommonJS",
        "lib": [
            "ESNext"
        ],
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "rootDir": "./",
        "moduleResolution": "node",
        "baseUrl": ".",
        "paths": {
            "@plincare/shared": [
                "packages/shared/src"
            ]
        }
    },
    "exclude": [
        "node_modules",
        "dist"
    ]
}